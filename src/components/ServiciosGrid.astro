---
import { getServicios } from '../lib/wordpress.js';

const servicios = await getServicios();
---

<section class="servicios-section">
  <div class="container">
    <div class="section-header">
      <span class="section-badge">Servicios</span>
      <h2>Soluciones Legales Especializadas</h2>
      <p class="section-subtitle">Asesoría integral en derecho laboral adaptada a tus necesidades</p>
    </div>
    
    <div class="servicios-grid">
      {servicios && servicios.length > 0 ? (
        servicios.map((servicio, index) => (
          <article class="servicio-card" style={`animation-delay: ${index * 0.1}s`}>
            <div class="card-content">
              <div class="card-number">{String(index + 1).padStart(2, '0')}</div>
              <a href={`/servicios/${servicio.slug}`} class="card-title-link">
                <h3 set:html={servicio.title.rendered} />
              </a>
              <div class="excerpt" set:html={servicio.excerpt.rendered} />
              <a href={`/servicios/${servicio.slug}`} class="card-link">
                <span>Conocer más</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
            {servicio._embedded?.['wp:featuredmedia']?.[0]?.source_url && (
              <a href={`/servicios/${servicio.slug}`} class="card-image-link">
                <div class="card-image">
                  <img 
                    src={servicio._embedded['wp:featuredmedia'][0].source_url} 
                    alt={servicio.title.rendered}
                    loading="lazy"
                  />
                </div>
              </a>
            )}
          </article>
        ))
      ) : (
        <p class="no-servicios">No hay servicios disponibles</p>
      )}
    </div>
  </div>
</section>

<style>
  .servicios-section {
    padding: 6rem 2rem;
    background: #ffffff;
    position: relative;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .section-badge {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: linear-gradient(135deg, #1e3a8a 0%, #008BE1 100%);
    color: white;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }
  
  h2 {
    font-size: 32px;
    margin-bottom: 1rem;
    color: #454655;
    font-weight: 800;
    letter-spacing: -0.02em;
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    color: #454655;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .servicios-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }
  
  .servicio-card {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid #e2e8f0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.6s ease-out backwards;
    position: relative;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .servicio-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border-color: #1e3a8a;
  }
  
  .card-content {
    padding: 2rem;
    position: relative;
  }
  
  .card-number {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-size: 2rem;
    font-weight: 800;
    background: linear-gradient(135deg, #1e3a8a 0%, #008BE1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    opacity: 0.2;
  }
  
  .card-title-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .card-title-link:hover h3 {
    color: #1e3a8a;
  }

  .servicio-card h3 {
    font-size: 1.5rem;
    color: #454655;
    margin-bottom: 1rem;
    font-weight: 700;
    line-height: 1.3;
    padding-right: 3rem;
    transition: color 0.3s ease;
  }
  
  .servicio-card .excerpt {
    color: #454655;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }
  
  .servicio-card .excerpt :global(p) {
    margin: 0;
  }
  
  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #1e3a8a;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: gap 0.3s ease;
  }
  
  .card-link:hover {
    gap: 0.75rem;
  }
  
  .card-link svg {
    transition: transform 0.3s ease;
  }
  
  .card-link:hover svg {
    transform: translateX(4px);
  }
  
  .card-image-link {
    display: block;
    text-decoration: none;
  }

  .card-image {
    height: 200px;
    overflow: hidden;
    position: relative;
  }
  
  .card-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.1) 100%);
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .servicio-card:hover .card-image img {
    transform: scale(1.05);
  }
  
  .no-servicios {
    grid-column: 1 / -1;
    text-align: center;
    color: #94a3b8;
    font-size: 1.1rem;
    padding: 3rem;
  }
  
  @media (max-width: 768px) {
    .servicios-section {
      padding: 4rem 1.5rem;
    }
    
    .servicios-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
