---
import { getTestimonios } from '../lib/wordpress.js';

const allTestimonios = await getTestimonios();
const testimonios = allTestimonios.slice(0, 3);
---

<section class="testimonios-section">
  <div class="container">
    <div class="section-header">
      <span class="section-badge">Testimonios</span>
      <h2>Casos de Ã‰xito</h2>
      <p class="section-subtitle">La confianza de nuestros clientes nos respalda</p>
    </div>
    
    <div class="testimonios-grid">
      {testimonios && testimonios.length > 0 ? (
        testimonios.map((testimonio, index) => (
          <article class="testimonio-card" style={`animation-delay: ${index * 0.15}s`}>
            <div class="rating">
              {[...Array(5)].map(() => (
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              ))}
            </div>
            
            <div class="content" set:html={testimonio.content.rendered} />
            
            <div class="author">
              {testimonio._embedded?.['wp:featuredmedia']?.[0]?.source_url && (
                <div class="author-photo">
                  <img 
                    src={testimonio._embedded['wp:featuredmedia'][0].source_url} 
                    alt={testimonio.title.rendered}
                    loading="lazy"
                  />
                </div>
              )}
              <div class="author-info">
                <h4 set:html={testimonio.title.rendered} />
                {testimonio.acf?.cargo && (
                  <p class="cargo">{testimonio.acf.cargo}</p>
                )}
              </div>
            </div>
          </article>
        ))
      ) : (
        <p class="no-testimonios">No hay testimonios disponibles</p>
      )}
    </div>
  </div>
</section>

<style>
  .testimonios-section {
    padding: 6rem 2rem;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .section-badge {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: linear-gradient(135deg, #1e3a8a 0%, #008BE1 100%);
    color: white;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }
  
  h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1rem;
    color: #454655;
    font-weight: 800;
    letter-spacing: -0.02em;
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    color: #454655;
  }
  
  .testimonios-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .testimonio-card {
    background: white;
    padding: 2.5rem;
    border-radius: 20px;
    border: 1px solid #e2e8f0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.6s ease-out backwards;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .testimonio-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    border-color: #1e3a8a;
  }
  
  .rating {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1.5rem;
    color: #fbbf24;
  }
  
  .content {
    color: #454655;
    line-height: 1.8;
    margin-bottom: 2rem;
    font-size: 1.05rem;
  }
  
  .content :global(p) {
    margin: 0;
  }
  
  .author {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e2e8f0;
  }
  
  .author-photo {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background: linear-gradient(135deg, #1e3a8a 0%, #008BE1 100%);
    padding: 2px;
  }
  
  .author-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }
  
  .author-info h4 {
    margin: 0;
    font-size: 1.05rem;
    font-weight: 700;
    color: #454655;
  }
  
  .cargo {
    margin: 0.25rem 0 0;
    font-size: 0.875rem;
    color: #454655;
  }
  
  .no-testimonios {
    grid-column: 1 / -1;
    text-align: center;
    color: #94a3b8;
    font-size: 1.1rem;
    padding: 3rem;
  }
  
  @media (max-width: 768px) {
    .testimonios-section {
      padding: 4rem 1.5rem;
    }
    
    .testimonios-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .testimonio-card {
      padding: 2rem;
    }
  }
</style>
