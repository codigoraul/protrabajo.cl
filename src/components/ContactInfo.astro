          src="https://www.google.com/maps?q=Santa+Magdalena+75,+Providencia,+Santiago&z=17&output=embed"
          width="100%" 
          height="450" 
          style="border:0; border-radius: 16px;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    </div>
  </div>
</section>

<script>
  // Cargar datos de WordPress headless en client-side
  async function loadContactData() {
    try {
      const response = await fetch('https://protrabajo.cl/admin/wp-json/wp/v2/contact-info');
      const data = await response.json();
      
      if (data?.acf?.email) {
        const emailEl = document.getElementById('contact-email');
        if (emailEl) {
          emailEl.textContent = data.acf.email;
          emailEl.href = `mailto:${data.acf.email}`;
        }
      }
      
      if (data?.acf?.telefono) {
        const phoneEl = document.getElementById('contact-phone');
        if (phoneEl) {
          phoneEl.textContent = data.acf.telefono;
          phoneEl.href = `tel:${data.acf.telefono}`;
        }
      }
      
      if (data?.acf?.direccion) {
        const addressEl = document.getElementById('contact-address');
        if (addressEl) {
          addressEl.textContent = data.acf.direccion;
        }
      }
      
      if (data?.acf?.horario) {
        const hoursEl = document.getElementById('contact-hours');
        if (hoursEl) {
          hoursEl.textContent = data.acf.horario;
        }
      }
    } catch (error) {
      console.log('Error loading WordPress data:', error);
    }
  }
  
  // Cargar datos cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', loadContactData);
</script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const formWrapper = document.querySelector('.contact-form-wrapper');
    
    if (form && formWrapper) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Mostrar estado de carga
        const submitButton = form.querySelector('.submit-button') as HTMLButtonElement;
        if (submitButton) {
          const originalText = submitButton.innerHTML;
          submitButton.innerHTML = '<span>Enviando...</span>';
          submitButton.disabled = true;
          
          // Obtener datos del formulario
          const formData = new FormData(form);
          
          try {
            const response = await fetch('{actionUrl}', {
              method: 'POST',
              body: formData
            });
            
            const result = await response.text();
            
            // Guardar datos como backup (por si el correo no llega)
            const formDataCopy = {
              name: formData.get('name'),
              email: formData.get('email'), 
              phone: formData.get('phone'),
              message: formData.get('message'),
              timestamp: new Date().toISOString()
            };
            
            // Guardar en localStorage
            const submissions = JSON.parse(localStorage.getItem('protrabajo_form_data') || '[]');
            submissions.push(formDataCopy);
            localStorage.setItem('protrabajo_form_data', JSON.stringify(submissions));
            
            // Limpiar formulario
            form.reset();
            
            // Mostrar mensaje de éxito
            const message = document.createElement('div');
            message.style.cssText = `
              padding: 1.5rem 2rem !important;
              border-radius: 12px !important;
              margin-bottom: 2rem !important;
              font-size: 1.3rem !important;
              font-weight: 700 !important;
              line-height: 1.6 !important;
              text-align: center !important;
              box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3) !important;
              border: 2px solid rgba(16, 185, 129, 0.5) !important;
              background: linear-gradient(135deg, #10b981 0%, #059669 100%) !important;
              color: #ffffff !important;
              text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3) !important;
              animation: slideInDown 0.5s ease-out !important;
            `;
            message.textContent = '✅ ¡Gracias por contactarnos! Hemos recibido tu mensaje y te responderemos a la brevedad.';
            
            // Insertar mensaje
            formWrapper.insertBefore(message, form);
            
            // Remover mensaje después de 8 segundos
            setTimeout(() => {
              if (message.parentNode) {
                message.parentNode.removeChild(message);
              }
            }, 8000);
            
          } catch (error) {
            console.error('Error al enviar formulario:', error);
            
            // Mostrar mensaje de error
            const errorMessage = document.createElement('div');
            errorMessage.className = 'status-message status-error';
            errorMessage.textContent = 'No se pudo enviar el mensaje. Por favor intenta nuevamente.';
            
            // Insertar mensaje al principio del wrapper
            formWrapper.insertBefore(errorMessage, form);
            
            // Remover mensaje después de 5 segundos
            setTimeout(() => {
              if (errorMessage.parentNode) {
                errorMessage.parentNode.removeChild(errorMessage);
              }
            }, 5000);
          } finally {
            // Restaurar botón
            submitButton.innerHTML = originalText;
            submitButton.disabled = false;
          }
        }
      });
    }
  });
</script>

