---
import { getServicios, getServicioBySlug } from '../../lib/wordpress.js';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const servicios = await getServicios();
  
  if (!servicios || servicios.length === 0) {
    return [];
  }
  
  return servicios.map((servicio) => ({
    params: { slug: servicio.slug },
    props: { servicio },
  }));
}

const { servicio } = Astro.props;

if (!servicio) {
  return Astro.redirect('/404');
}
---

<Layout title={servicio.title.rendered}>
  <article class="servicio-detail">
    <div class="container">
      <a href="/" class="back-link">‚Üê Volver al inicio</a>
      
      {servicio._embedded?.['wp:featuredmedia']?.[0]?.source_url && (
        <img 
          src={servicio._embedded['wp:featuredmedia'][0].source_url} 
          alt={servicio.title.rendered}
          class="featured-image"
        />
      )}
      
      <h1 set:html={servicio.title.rendered} />
      
      <div class="content" set:html={servicio.content.rendered} />
    </div>
  </article>
</Layout>

<style>
  .servicio-detail {
    padding: 4rem 2rem;
    min-height: 60vh;
  }
  
  .container {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }
  
  .back-link:hover {
    color: #764ba2;
  }
  
  .featured-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 2rem;
  }
  
  h1 {
    font-size: 3rem;
    color: #1a202c;
    margin-bottom: 2rem;
    font-weight: 700;
  }
  
  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #2d3748;
  }
  
  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #1a202c;
  }
  
  .content :global(p) {
    margin-bottom: 1rem;
  }
  
  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }
  
  .content :global(li) {
    margin-bottom: 0.5rem;
  }
</style>
